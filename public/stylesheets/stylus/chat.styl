@import variables
.chat
  position relative
  width 100%
  height 70%
  float left
  padding 10px

  .chat-area
    height 95%
    width 100%
    overflow-y scroll
    overflow-x hidden
    font-size 12pt
    border-top 1px solid #555
    
    .chat-messages
      ul.chat-messages-list
        list-style none
        padding 0

        li.correct
          color #48e548

  .chat-input-area
    position absolute
    width 100%

    .left-lip, .right-lip, input.chat-input
      margin-top 6px

    .left-lip, .right-lip
      height 23px
      float left
      border-right 1px solid #bbb
      bottom 13px

      .blocker
        position absolute
        height 18px
        border-right 1px solid $gray-dark

    input.chat-input
      background none
      border none
      border-bottom 1px solid #bbb
      padding 1px 5px 1px 5px
      color #fff
      float left

      &:focus 
        outline-width 0

    button
      margin-left 9px
